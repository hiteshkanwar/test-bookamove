<% @page_title = raw("<i class='icon-calendar blank3 blue-text green'></i>") + "Staff Calendars" %>

<div class="col-md-12">
  <div class="row body_top_margin">
    <div class="col-md-12">
      <% if validate_special_permission('create_edit.staff_calendars', @current_actions) %>
        <%= link_to 'New Staff Calendar', new_calendar_staff_group_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered table-hover">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Is Active?</th>
          <th>Actions</th>
        </tr>
        <% @calendar_staff_groups.each do |calendar_staff_group| %>
            <tr>
              <td><%= calendar_staff_group.name %></td>
              <td><%= calendar_staff_group.description %></td>
              <td><%= check_box_tag 'active', calendar_staff_group.active, calendar_staff_group.active, disabled: true %></td>
              <td class="col-md-3 nowrap">
                <% if validate_special_permission('view.all_staff_calendars', @current_actions) %>
                  <%= link_to 'Show', calendar_tasks_path(type: 'task', group: calendar_staff_group.id) %>
                <% end %>
                <% if validate_special_permission('create_edit.staff_calendars', @current_actions) %>
                  <%= link_to 'Edit', edit_calendar_staff_group_path(calendar_staff_group) %>
                <% end %>
                <!-- <%= link_to 'Destroy', calendar_staff_group, method: :delete, remote: true, data: {confirm: 'Are you sure?'} %> -->
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<br class="clearfix"><br>

