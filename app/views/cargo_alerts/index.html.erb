<legend>Move Cargo Alert</legend>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Move Type', new_cargo_alert_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Description</th>
        <th>Is Active?</th>
        <th>Actions</th>
      </tr>
      <% @cargo_alerts.each do |cargo_alert| %>
          <tr>
            <td><%= cargo_alert.description %></td>
            <td><%= check_box_tag 'active', cargo_alert.active, cargo_alert.active, disabled: true %></td>
            <td>
              <%= link_to 'Edit', edit_cargo_alert_path(cargo_alert) %>
              <%= link_to 'Destroy', cargo_alert, method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
