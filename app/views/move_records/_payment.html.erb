<!--type-->
<div class="form-group col0-5 colmr">
  <%= label :payment, :type, class: "labels" %><br>
  <%= select :payment, :type_payment, options_for_select({"Cash" => "cash", "Invoice" => "invoice", "Multi-Part" => "multi_part", "Visa" => "visa", "Mastercard" => "mastercard", "Discover" => "discover"}), {}, class: 'form-control2', style: 'width:100%',
             readonly: true %>
</div>
<!--status-->
<div class="form-group col0-5 colmr">
  <%= label :payment, :status, class: "hhidden labels" %><br>
  <%= text_field :payment, :status, placeholder: "Status", class: 'form-control', style: 'width:100%', readonly:
      true %>
</div>
