<div>
  <!--payment_detail-->
  <div class="form-group col6 colmr">
    <%= label :payment, :payment_detail, 'Payment alert details', class: "hhidden labels" %><br>
    <%= text_field :payment, :payment_detail, placeholder: "Payment Alert Details", class: 'form-control', style: 'width:100%', readonly:
        true %>
  </div>
  <!--payment_alert-->
  <div class="form-group col1">
    <%= label :payment, :payment_alert, class: "hhidden labels" %><br>
    <%= select :payment, :payment_alert_id, options_from_collection_for_select(@payment_alert, :description, :description, @settings.payment_alert.description), {include_blank: "Payment Alert"}, :class => 'form-control text-grey', style: 'width:100%', readonly: true, data_id:
        'payment_alert_id' %>
  </div>
</div>
