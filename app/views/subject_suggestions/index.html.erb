<legend>Subject Suggestions</legend>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Subject Suggestion', new_subject_suggestion_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Description</th>
        <th>Is Active?</th>
        <th>Actions</th>
      </tr>
      <% @subject_suggestions.each do |subject_suggestion| %>
          <tr>
            <td><%= subject_suggestion.description %></td>
            <td><%= check_box_tag 'active', subject_suggestion.active, subject_suggestion.active, disabled: true %></td>
            <td>
              <%= link_to 'Edit', edit_subject_suggestion_path(subject_suggestion) %>
              <%= link_to 'Destroy', subject_suggestion, method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
