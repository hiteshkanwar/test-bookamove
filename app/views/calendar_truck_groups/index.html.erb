<% @page_title = raw("<i class='icon-calendar blank3 blue-text brown'></i>") + "Truck Calendars" %>

<div class="col-md-12 body_top_margin">
  <div class="row">
    <div class="col-md-12">
      <% if validate_special_permission('create_edit.truck_calendars', @current_actions) %>
        <%= link_to 'New Truck Group Calendar', new_calendar_truck_group_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered table-hover">
        <tr>
          <th>Description</th>
          <th>Is Active?</th>
          <th>Actions</th>
        </tr>
        <% @calendar_truck_groups.each do |calendar_truck_group| %>
            <tr>
              <td><%= calendar_truck_group.description %></td>
              <td><%= check_box_tag 'active', calendar_truck_group.active, calendar_truck_group.active, disabled: true %></td>
              <td>
                <% if validate_special_permission('view.all_truck_calendars', @current_actions) %>
                  <%= link_to 'Show', calendar_index_path(type: 'trucks', group: calendar_truck_group.id) %>
                <% end %>
                <% if validate_special_permission('create_edit.truck_calendars', @current_actions) %>
                  <%= link_to 'Edit', edit_calendar_truck_group_path(calendar_truck_group) %>
                  <%= link_to 'Destroy', calendar_truck_group, method: :delete, data: {confirm: 'Are you sure?'} %>
                <% end %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<br class="clearfix"><br>

