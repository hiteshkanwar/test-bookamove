<legend>Parameters</legend>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Parameter', new_config_parameter_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Description</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
      <% @config_parameters.each do |parameter| %>
          <tr>
            <td><%= parameter.description %></td>
            <td><%= parameter.value %></td>

            <td>
              <%= link_to 'Edit', edit_config_parameter_path(parameter) %>
              <%= link_to 'Destroy', parameter, method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
