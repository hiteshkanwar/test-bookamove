<legend>Move Referral</legend>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Move Type', new_move_referral_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Description</th>
        <th>Is Active?</th>
        <th>Actions</th>
      </tr>
      <% @move_referrals.each do |move_referral| %>
          <tr>
            <td><%= move_referral.description %></td>
            <td><%= check_box_tag 'active', move_referral.active, move_referral.active, disabled: true %></td>
            <td>
              <%= link_to 'Edit', edit_move_referral_path(move_referral) %>
              <%= link_to 'Destroy', move_referral, method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
