<legend>Cities</legend>
<div class="row">
  <div class="col-md-12">
    <%= link_to 'New City', new_city_path, class: 'btn btn-primary' %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Description</th>
        <th>Is Active?</th>
        <th>Actions</th>
      </tr>
      <% @cities.each do |city| %>
          <tr>
            <td><%= city.description %></td>
            <td><%= check_box_tag 'active', city.active, city.active, disabled: true %></td>
            <td>
              <%= link_to 'Edit', edit_city_path(city) %>
              <%= link_to 'Destroy', city, method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
