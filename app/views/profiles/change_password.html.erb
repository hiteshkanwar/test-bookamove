<% @page_title = raw("<i class='icon-lock blank3 blue-text'></i> Change Password ") %>

<div class="body_top_margin col-md-12">
<div class="alert alert-danger alert-dismissable hidden msg-error-pass">
  <i class="icon-remove-sign"></i> Error, Passwords must match.
</div>
<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissable">
      <h4>
        <i class="icon-ok-sign"></i>
        Success
      </h4>

      <p class="welcome"><%= flash[:notice] %></p>
    </div>
<% end %>
<%= form_for (@current_user), :html => {:class => 'form form-horizontal form-user-profile'}, url: profile_path(id: @current_user.id) do |f| %>
    <% if @current_user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @current_user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :new_password, class: 'control-label col-md-3' %>
      <div class="col-md-5">
        <%= f.password_field :password, class: 'form-control password-user-profile', required: true %>
      </div>
      <div class="col-md-4"></div>
    </div>
    <div class="form-group">
      <%= f.label :confirm_password, class: 'control-label col-md-3' %>
      <div class="col-md-5">
        <%= password_field :password, 'conf', class: 'form-control  password-conf-user-profile', required: true %>
      </div>
      <div class="col-md-4"></div>
    </div>
    <div class="clearfix"></div>
    <div class="pull-right btn-user-profile col-md-6 col-md-offset-3">
      <button type="submit" name="commit" class="btn btn-primary ok-user-profile">Save</button>
      <a class="btn btn-primary" href="javascript:history.go(-1)">Back</a>
    </div>
<% end %>
</div>