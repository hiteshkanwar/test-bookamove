          <%= render 'image_trucks' %>
      <% end %>
      <div class="col-md-8">
        <div class="form-group clearfix">
          <div class="col-md-1">
            <%= f.label :name, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :description, class: 'form-control', required: true %>
          </div>
          <div class="col-md-1">
            <%= f.label :truck_size, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :size, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group clearfix">
          <div class="col-md-1">
            <%= f.label :truck_group, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
          </div>
          <div class="col-md-1">
            <%= f.label :phone, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group clearfix">
          <div class="col-md-1">
            <%= f.label :cell, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :cell, class: 'form-control' %>
