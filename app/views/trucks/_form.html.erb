            <%= f.text_field :license, class: 'form-control' %>
          </div>
          <div class="col-md-1">
            <%= f.label :registration, class: 'control-label text-left' %>
          </div>
          <div class="col-md-5">
            <%= f.text_field :registration, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group clearfix">
          <div class="col-md-1">
